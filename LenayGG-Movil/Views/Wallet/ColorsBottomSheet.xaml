<?xml version="1.0" encoding="utf-8" ?>
<the49:BottomSheet
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
    x:Class="LenayGG_Movil.Views.Wallet.ColorsBottomSheet">
    
    <the49:BottomSheet.Detents>
        <!-- Stop at the height of the screen -->
        <the49:FullscreenDetent />
        <!-- Stop at the height of the page content -->
        <the49:ContentDetent />
        <!-- Stop at 120dp -->
        <the49:HeightDetent Height="50" />
        <!-- Stop at 45% of the screen height -->
        <the49:RatioDetent Ratio="0.30" />
        <!-- Stop at the height of the divider view -->
        <the49:AnchorDetent Anchor="{x:Reference divider}" />
    </the49:BottomSheet.Detents>
    <VerticalStackLayout Spacing="16">
        <VerticalStackLayout>
            <Label Text="jijijija"/>
        </VerticalStackLayout>
        <BoxView x:Name="divider" />
        <VerticalStackLayout>
            <Label Text="jijijija"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</the49:BottomSheet>

