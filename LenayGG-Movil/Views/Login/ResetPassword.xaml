<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LenayGG_Movil.Views.Login.ResetPassword"
             Title="ResetPassword"
             BackgroundColor="#E5E5E5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <!-- Área verde -->
            <RowDefinition Height="2*" />
            <!-- Area del Formulario -->
        </Grid.RowDefinitions>

        <!-- Fondo verde -->
        <BoxView Grid.Row="0" Color="#8BC34A" HorizontalOptions="Fill" VerticalOptions="Fill" />

        <!-- Frame blanco -->
        <Frame Grid.Row="0" Grid.RowSpan="2"
       CornerRadius="30"
       Padding="50"
       Margin="20, -60, 20, 0"
    BackgroundColor="White"
    HasShadow="True"
      HorizontalOptions="Center"
      VerticalOptions="Center">


            <StackLayout Spacing="20" VerticalOptions="Center">
                <!-- Logo  -->
                <Image Source="logotipo" HeightRequest="250" HorizontalOptions="Center" />
                <Label Text="Ingresa tu correo"
                       TextColor="Black" 
                       FontAttributes="Bold"/>

                <!-- Correo  -->
                <Frame CornerRadius="25" Padding="10" HasShadow="True" BackgroundColor="White">
                    <Entry Placeholder="Correo Electrónico" TextColor="Black" Keyboard="Email" Text="{Binding Email}"/>
                </Frame>

                <!-- Botón de Login -->
                <Button Text="Recuperar contraseña" TextColor="White" BackgroundColor="Black" HeightRequest="50" CornerRadius="25" Command="{Binding ResetPasswordCommand}"/>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>