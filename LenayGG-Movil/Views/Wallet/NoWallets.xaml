<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LenayGG_Movil.Views.Wallet.NoWallets">
    <RefreshView IsRefreshing="{Binding isRefreshing}"
                 Command="{Binding RefreshPageCommand}">
        <ScrollView>
            <Grid VerticalOptions="CenterAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>

                <VerticalStackLayout Grid.Row="1">
                    <Frame BackgroundColor="White"
               BorderColor="White"
               Margin="25,0,25,0">
                        <Label Text="No tienes registrada ninguna billetera crea una ahora mismo"
                   TextColor="black"/>
                    </Frame>

                    <Button Text="Crear billetera"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    CornerRadius="25"
                    BackgroundColor="#00979F"
                    TextColor="White"
                    Command="{Binding GoToCreateWalletCommand}"/>
                </VerticalStackLayout>
            </Grid>
        </ScrollView>

    </RefreshView>

</ContentView>
