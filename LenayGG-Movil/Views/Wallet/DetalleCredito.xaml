<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LenayGG_Movil.Views.Wallet.DetalleCredito"
             Title="DetalleCredito"
             BackgroundColor="White"
             xmlns:local="clr-namespace:LenayGG_Movil">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Frame BackgroundColor="Transparent" BorderColor="Transparent" Grid.Row="0">
            <Label TextColor="Black"
                   FontSize="20"
                   FontAttributes="Bold"
                   Text="Detalle billetera"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="StartAndExpand"/>
        </Frame>
        <Frame BackgroundColor="#C7696B"
               BorderColor="#C7696B"
               Margin="30,0,30,0"
               CornerRadius="25"
               Grid.Row="1">
            <VerticalStackLayout>
                <Frame BackgroundColor="white"
                       BorderColor="White"
                       Margin="20,0,20,0"
                       Padding="5"
                       CornerRadius="50">
                    <Label Text="{Binding WalletDto.Nombre}"
                           TextColor="Black"
                           FontSize="Title"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                </Frame>

                <Grid Padding="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="debes"
                           HorizontalOptions="End"
                           VerticalOptions="End"
                           Padding="0,0,5,10"/>
                    <Label Grid.Column="1"
                           Text="{Binding WalletDto.Saldo}"
                           FontSize="25"
                           FontAttributes="Bold"/>
                    <Frame Grid.Column="2"
                           BackgroundColor="#f0f0f0"
                           BorderColor="#f0f0f0"
                           CornerRadius="50"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand">
                    </Frame>
                </Grid>

                <Grid Padding="0,15,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>

                    <HorizontalStackLayout Grid.Column="0">
                        <Label Text="Fecha Corte:  "
                               FontSize="12"/>
                        <Label Text="{Binding WalletDto.FechaCorte}"
                               FontSize="12"
                               FontAttributes="Bold"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Grid.Column="1"
                                           HorizontalOptions="EndAndExpand">
                        <Label Text="Fecha Pago:  "
                               FontSize="12"/>
                        <Label Text="{Binding WalletDto.FechaDePago}"
                               FontSize="12"
                               FontAttributes="Bold"/>
                    </HorizontalStackLayout>
                </Grid>
            </VerticalStackLayout>
        </Frame>
        <Frame BackgroundColor="Transparent" BorderColor="Transparent" Grid.Row="2">
            <VerticalStackLayout>
                <Grid Padding="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <StackLayout Margin="30,0,30,0" Grid.Column="0">
                        <Label Text="Limite de credito"
                           TextColor="Black"/>
                        <local:BorderLessEntry Placeholder="Limite de credito" IsReadOnly="True" Text="{Binding WalletDto.LimiteCredito}" PlaceholderColor="Gray" TextColor="Black"/>
                        <BoxView HeightRequest="2" Color="Black"/>
                    </StackLayout>
                </Grid>

                <Frame Margin="10,10,10,0" BackgroundColor="Transparent"
                       BorderColor="Transparent">
                    <StackLayout>
                        <Label Text="Editar Billetera"
                           TextColor="Black"
                               Margin="10"/>
                        <BoxView HeightRequest="2"
                             Color="Black"/>
                    </StackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToEditarBilleteraCommand}" />
                    </Frame.GestureRecognizers>
                </Frame>

                <Frame Margin="10,0,10,10" BackgroundColor="Transparent"
                       BorderColor="Transparent">
                    <StackLayout>
                        <Label Text="Borrar Billetera"
                           TextColor="Black"
                               Margin="10"/>
                        <BoxView HeightRequest="2"
                             Color="Black"/>
                    </StackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding DeleteWalletCommand}" />
                    </Frame.GestureRecognizers>
                </Frame>


            </VerticalStackLayout>

            
            
        </Frame>
        <Frame BackgroundColor="Transparent" BorderColor="Transparent" Grid.Row="3">
            <Button VerticalOptions="EndAndExpand"
                    HorizontalOptions="End"
                    CornerRadius="50"
                    Text="âœ”"
                    TextColor="White"
                    BackgroundColor="#67AE08"
                    FontAttributes="Bold"
                    FontSize="Title"
                    Padding="6"
                    Command="{Binding ReturnPageCommand}"/>
        </Frame>
    </Grid>
</ContentPage>